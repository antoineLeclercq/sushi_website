@import "whitespace-reset-modified.css"
@import "_mixins"

body
  background: url("/images/background-image.png") repeat
  font: normal 14px "Lucianda", Helvetica, Arial, sans-serif

body > header, main, body > footer
  width: 1000px

body > header, body > footer
  border-bottom: 1px solid colors.infoDarker

a
  text-decoration: none
  &:focus, &:active
    outline: none

body > header
  overflow: hidden
  margin: 0 auto
  padding: 50px 0
  .logo
    float: left
    cursor: pointer
  .cart
    width: 220px
    float: right
    span
      double_buttons(black)
      font-size: 10px
      letter-spacing: 1px
      &.left
        width: 50%
        padding: 8px 5px
        text-align: center
        background: black
        color: colors.info
      &.right
        width: 50%
        text-align: center
      &.count
        font-size: 12px

main
  margin: 0 auto
  ul
    font-size: 0
    li
      width: 200px
      display: inline-block
      font-size: 14px

#cart
  height: 120px
  overflow: hidden
  background: black
  color: white
  ul
    float: left
    height: inherit
    width: 700px
    font-size: 0
    li
      width: 100px
      text-align: right
      font-size: 11px
      img
        width: 100%
  section
    float: right
    width: 200px
    padding: 20px 0 10px 15px
    background: colors.bg
    h3
      font-size: 10px
      text-transform: uppercase
      color: colors.info
    .total
      margin: 5px 0
      font-size: 30px
    footer
      a
        text-align: right
        font-size: 10px
        double_buttons(colors.bg)

#items
  li
    position: relative
    height: 340px
    margin: 20px 0 0 0
    background: white
    box-sizing: border-box
    article
      position: absolute
      box-shadow: 2px 0px 2px -2px #888;
      z-index: 10
    &:nth-child(5n)
      article
        box-shadow: none
    header
      position: relative
      margin: 0
      padding: 0
      border none
      cursor: pointer
      &:hover
        h2
          color: black
        &:after
          position: absolute
          box-sizing: border-box
          height: 200px
          width: 200px
          padding: 70px
          top: 0
          left: 0
          background: rgba(0, 0, 0, .6)
          content: url(/images/arrow-right.png)
          text-align: center
      h2
        margin: 25px 0 10px 0
        text-align: center
        text-transform: capitalize
        font-weight: normal
        font-size: 20px
        letter-spacing: 1px
        color: colors.name
    p
      margin: 0 0 20px 0
      text-align: center
      letter-spacing: 1px
      color: colors.info
    .add_cart
      display: block
      padding: 13px 0
      border-top: 1px dotted colors.info
      text-align: center
      text-transform: uppercase
      font-size: 12px
      cursor: pointer
      color: colors.buttonRed
      addToCartSign()
      &:hover
        buttonTransitionHover(white, colors.buttonRed, 0.75s)


#item_details
  position: relative
  width: 1000px
  min-height: 590px
  margin: 20px 0 0 0
  sushiBackground()
  > section
    position: absolute
    height: 200px
    top: 50%
    margin: -100px 0 0 0
    font-size: 0
    > *
      box-sizing: border-box
      display: inline-block
      height: inherit
      font-size: 12px
      vertical-align: middle
    .nav
      width: 100px
      padding: 80px 0 0 0
      background: black
      text-align: center
      cursor: pointer
      &:hover
        buttonTransitionHover(black, colors.buttonRed, 0.35s)
    article, aside
      background: white
    article
      width: 400px
      h1
        margin: 25px 0 5px 25px
        font-size: 35px
        font-weight: normal
      p
        margin: 0 0 0 25px
      footer
        margin: 45px 0 0 0
        border-top: 1px dotted colors.info
        > *
          display: inline-block
        h2
          margin: 20px 0 0 25px
          font-size: 30px
          font-weight: normal
          color: colors.infoDarker
        .add_cart
          float: right
          margin: 20px 25px 0 0
          gradientButton()
          addToCartSign()
      .close
        float: right
        margin: 10px 20px 0 0
        transform: rotate(45deg);
        font-size: 25px
        color: black
    aside
      width: 200px
      padding: 0 20px
      box-shadow: -1px 0px 2px 0px #aaa;
      h3
        margin: 30px 0 15px 0
        font-size: 13px
        text-align: center
        letter-spacing: 0.5px
      table
        width: 100%
        tr
          td
            color: colors.infoDarker
            + td
              text-align: right
              color: black


#checkout
  > div
    sushiBackground()
    height: 60px
    &.img_top
      background-position: top
    &.img_bottom
      background-position: bottom
  > section
    padding: 55px 100px
    background: white
    h1
      margin: 0 0 60px 0
      font-size: 40px
    table
      width: 800px
      border-collapse: collapse
      text-align: left
      thead
        text-transform: uppercase
      tbody
        td
          border-top: 1px solid colors.info
          border-bottom: 1px solid colors.info
          img
           height: 100px
      td, th
        &:nth-child(4)
          text-align: right
      td
        &:nth-child(2)
          font-size: 20px
        &:nth-child(3)
          font-weight: bold
          .quantity_modifier
            margin: 0 10px
            vertical-align: middle
            border-radius: 100%
            font-size: 12px
            cursor: pointer
          p
            display: inline-block
        &:nth-child(4)
          font-size: 20px
          letter-spacing: 2px
    > p
      margin: 15px 0 0 0
      text-align: right
      font-size: 10px
      text-transform: uppercase
      color: colors.infoDarker
      .total
        margin: 0 0 0 10px
        font-size: 30px
        letter-spacing: 2px
        color: black
    footer
      margin: 50px 0 0 0
      text-align: right
      a
        color: colors.button
        text-transform: uppercase
      form
        display: inline-block
        margin: 0 0 0 20px
        input
          border: none
          gradientButton()
          font-size: 14px
          padding: 15px

body > footer
  margin: 50px auto