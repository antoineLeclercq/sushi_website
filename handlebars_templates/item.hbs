<figure>
  <img src="images/{{image}}">
</figure>
<h1>{{name}}</h1>
<p>{{description}}</p>
<footer>
  <h2>${{format_price price}}</h2>
  <a href="#">Add to cart</a>
</footer>
<aside>
  <h3>Nutritional Information</h3>
  <table>
    <tbody>
    {{#with stats}}
      <tr>
        <td>Protein</td>
        <td>{{protein}}</td>
      </tr>
      <tr>
        <td>Fat</td>
        <td>{{fat}}</td>
      </tr>
      <tr>
        <td>Carbohydrate</td>
        <td>{{carbohydrate}}</td>
      </tr>
      <tr>
        <td>Energy (kj)</td>
        <td>{{energy}}</td>
      </tr>
      <tr>
        <td>Energy (kcal)</td>
        <td>{{convert_to_kcal energy}}</td>
      </tr>
      <tr>
        <td>Sugar</td>
        <td>{{sugar}}</td>
      </tr>
    {{/with}}
    </tobdy>
  </table>
</aside>